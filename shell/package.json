{
  "name": "sengo-shell",
  "version": "0.1.0",
  "description": "Interactive shell for the Sengo MongoDB-like client.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "cd ../client && npm run build:esm:fix && cd ../shell && node ./dist/index.js",
    "build": "tsc",
    "clean": "rimraf dist",
    "test": "jest",
    "verify": "npm run clean && npm run build && npm test"
  },
  "dependencies": {
    "bson": "^6.6.0",
    "readline": "^1.3.0",
    "sengo-client": "file:../client"
  },
  "devDependencies": {
    "@types/chance": "^1.1.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "chance": "^1.1.13",
    "jest": "^30.0.3",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.0.0"
  }
}
