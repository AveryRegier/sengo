{
  "name": "sengo-shell",
  "version": "0.1.0",
  "description": "Interactive shell for the Sengo MongoDB-like client.",
  "type": "commonjs",
  "main": "dist/index.js",
  "bin": {
    "sengo": "dist/sengo.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "clean": "rimraf --glob build-cjs bin src/**/*.js src/**/*.test.ts dist",
    "test": "vitest run",
    "verify": "npm run clean && npm run build && npm test"
  },
  "dependencies": {
    "bson": "^6.6.0",
    "readline": "^1.3.0",
    "clox": "file:../../clox/dist",
    "sengo": "file:../client/dist"
  },
  "devDependencies": {
    "@types/chance": "^1.1.7",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "chance": "^1.1.13",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.0.0",
    "vitest": "^3.2.4"
  }
}
